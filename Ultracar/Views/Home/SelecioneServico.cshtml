
@{
    @model List<ServicoContratadoView>;
}
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Cliente</td>
            <td>Modelo</td>
            <td>Marca</td>
            <td>AnoModelo</td>
            <td>Servico</td>
            <td>Preco</td>
            <td>Excluir</td>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {

            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.Cliente</td>
                    <td>@item.Modelo</td>
                    <td>@item.Marca</td>
                    <td>@item.AnoModelo.ToString()</td>
                    <td>@item.Servico</td>
                    <td>@item.Preco.ToString("C")</td>
                    <td><button class="btn btn-block btn-primary" onclick="window.location.href ='/home/ExcluirServicoContratado?idServicoContratado=@Convert.ToInt32(item.idServicoContratado)&idCarroCliente=@Convert.ToInt32(item.idCarroCliente)'">Excluir</button></td>
                </tr>

            }
        }
        else
        {
            <h4>Sem Registros</h4>
        }
    </tbody>
</table>
<tr><td>Valor Total:</td></tr>
<h4>@ViewData["Total"]</h4>
<br />
<tr>
    <td><button type="submit" class="btn btn-primary btn-sm" onclick="window.location.href ='/home/checkin?idCarroCliente=@ViewData["idCarroCliente"]'">Proseguir</button></td>
    <td><button type="submit" class="btn btn-danger btn-sm" onclick="window.location.href ='/home/index'">Não</button></td>
</tr>

